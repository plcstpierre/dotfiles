# more packages
sudo apt-get install -y ripgrep fzf neovim

# tmux
ln -sf ~/dotfiles/tmux/tmux.conf ~/.tmux.conf
tmux source-file ~/.tmux.conf

# vundle
git clone --depth 1 https://github.com/VundleVim/Vundle.vim.git ~/src/github.com/VundleVim/Vundle.vim

# nvim
mkdir -p ~/.config/nvim
ln -sf ~/dotfiles/nvim/init.vim ~/.config/nvim/init.vim
nvim --headless +PluginInstall +qall


